<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical"
    tools:context="com.example.flavia.fg_user_app.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/greeting"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/greeting" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mail"
        android:textSize="9pt"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mail" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/qrInstructions" />

    <android.support.v7.widget.AppCompatImageView
        android:minWidth="80sp"
        android:id="@+id/qrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/username" />

    <android.support.v7.widget.AppCompatTextView
        android:text=" "
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:textSize="11pt"
        android:maxLines="1"

        android:singleLine="true"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birthdate" />

    <android.support.v7.widget.AppCompatTextView
        android:text="aucune donnée "
        android:id="@+id/birthdate"
        android:textSize="11pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/steam" />

    <android.support.v7.widget.AppCompatTextView
        android:text="aucune donnée "
        android:id="@+id/steam_id"
        android:textSize="11pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/battleTag" />

    <android.support.v7.widget.AppCompatTextView
        android:text="aucune donnée "
        android:id="@+id/battle_tag"
        android:textSize="11pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lol" />

    <android.support.v7.widget.AppCompatTextView
        android:text="aucune donnée "
        android:id="@+id/lolTag"
        android:textSize="11pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</ScrollView>